{
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"rootDir": ".",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@prisma/*": ["prisma/*"]
		}
	},
	"include": [
		"src/**/*",
		"prisma/client.ts",
		"prisma/seed.ts",
		"prisma/mock.ts"
	],
	"exclude": ["node_modules", "**/*.config.ts"]
}
